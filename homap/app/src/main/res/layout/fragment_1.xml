<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/color_title_bar"
        android:gravity="center"
        android:text="首页"
        android:textColor="#ffffff"
        android:textSize="18sp" />


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:banner_default_image="@mipmap/ic_launcher"
        app:banner_layout="@layout/banner"
        app:indicator_drawable_selected="@drawable/home_banner_indicator_blue"
        app:indicator_drawable_unselected="@drawable/home_banner_indicator_dark"
        app:indicator_margin="4dp" />


    <TextView
        android:id="@+id/tv_shishi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@color/whilt"
        android:drawableLeft="@mipmap/icon_tab_home_customer_select"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="站点查询"
        android:textColor="@color/color_black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_huancheng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/whilt"
        android:drawableLeft="@mipmap/icon_tab_home_index_select"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="换乘查询"
        android:textColor="@color/color_black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@color/whilt"
        android:drawableLeft="@mipmap/icon_tab_home_mine_select"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="线路查询"
        android:textColor="@color/color_black"
        android:textSize="15sp" />


</LinearLayout>